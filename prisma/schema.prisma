// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Blueprint {
  id          String       @id @default(cuid())
  name        String
  description String?
  fields      BlueprintField[]
  contracts   Contract[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model BlueprintField {
  id         String     @id @default(cuid())
  blueprintId String
  blueprint  Blueprint  @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
  type       String     // TEXT, DATE, SIGNATURE, CHECKBOX
  label      String
  positionX  Int        @default(0)
  positionY  Int        @default(0)
  required   Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([blueprintId])
}

model Contract {
  id          String   @id @default(cuid())
  name        String
  blueprintId String
  blueprint   Blueprint @relation(fields: [blueprintId], references: [id])
  status      String   @default("CREATED") // CREATED, APPROVED, SENT, SIGNED, LOCKED, REVOKED
  fields      ContractField[]
  statusHistory ContractStatusHistory[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([blueprintId])
  @@index([status])
}

model ContractStatusHistory {
  id         String   @id @default(cuid())
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  fromStatus String?
  toStatus   String
  changedBy  String?  // User ID or name
  reason     String?
  createdAt  DateTime @default(now())

  @@index([contractId])
  @@index([createdAt])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   @default("VIEWER") // VIEWER, APPROVER, SIGNER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model ContractField {
  id         String   @id @default(cuid())
  contractId String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  fieldId    String   // Reference to BlueprintField id
  value      String?  // JSON string for complex values
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([contractId])
  @@index([fieldId])
}
